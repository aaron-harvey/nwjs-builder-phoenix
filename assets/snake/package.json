{
  "name": "snake",
  "version": "0.1.0",
  "description": "A sample nwjs app that implements the classic snake game.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulbjensen/cross-platform-desktop-applications.git"
  },
  "main": "index.html",
  "scripts": {
    "build": "cross-env DEBUG=* build --tasks win-x64 .",
    "run": "cross-env DEBUG=* run --x64 ."
  },
  "author": "paulbjensen",
  "license": "MIT",
  "build": {
    "appId": "com.github.paulbjensen.cross-platform-desktop-applications.chapter-14.snake-nwjs",
    "nwVersion": "0.25.2",
    "packed": false,
    "targets": [
      "nsis7z"
    ],
    "strippedProperties": [
      "build"
    ],
    "outputPattern": "${NAME}-${VERSION}-${PLATFORM}-${ARCH}",
    "win": {
      "productName": "Snake",
      "companyName": "Snake Company",
      "copyright": "MIT 2017",
      "icon": "./assets/pd.ico",
      "signing": {
        "signtoolPath": "C:\\Program Files (x86)\\Windows Kits\\8.1\\bin\\x64\\signtool.exe",
        "cliArgs": "sign /debug /f E:\\codesigning.crt.pfx /p top$3c37pa$$ /tr http://timestamp.comodoca.com/?td=sha256 /td sha256 /fd sha256 /v"
      }
    },
    "nsis": {
      "diffUpdaters": true
    }
  },
  "devDependencies": {
    "cross-env": "^5.0.5",
    "dotenv": "^4.0.0",
    "nwjs-builder-phoenix": "file:../.."
  },
  "window": {
    "width": 840,
    "height": 470,
    "toolbar": false,
    "icon": "./assets/pd.png"
  }
}
